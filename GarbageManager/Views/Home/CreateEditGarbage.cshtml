@model GarbageManager.Models.Garbage

<div class="text-center">
    <h2>Enter Item</h2>
</div>

<form asp-action="GarbageInfoSubmit" asp-controller="Home">
    <input class="form-control " hidden type="number" placeholder="Id" asp-for="Id" />

    <label>Name</label>
    <input class="form-control" type="text" placeholder="Name of the Item" asp-for="Name" />

    <label>Type</label>
    <select class="form-control" asp-for="Type">
        <option>Paper</option>
        <option>Metal</option>
        <option>Plastic</option>
        <option>E-waste</option>
    </select>

    <label>Quantity(in Kg)</label>
    <input class="form-control" type="number" placeholder="Quantity of Item" asp-for="Quantity" />
    <span asp-validation-for="Quantity" class="text-danger"></span>

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>

<div class="mt-4">
    <p class="fw-bold">Paper=₹8 | Metal=₹10 | E-waste=₹6 | Plastic=₹2</p>
</div>

